<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student | @ViewBag.Title</title>
    <link rel="icon" type="image/ico" sizes="32x32" href="~/favicon.ico">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <script src="~/Scripts/jquery.js"></script>

    <script src="~/Scripts/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
    <script src="~/Scripts/all.js"></script>
    <script src="~/Scripts/fontawesome.js"></script>
    <link rel="stylesheet" href="~/Content/style.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".show_all .link").click(function () {
                $(".popup").show();
            });

            $(".close").click(function () {
                $(".popup").hide();
            });
        });
    </script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="@Url.Action("Navigation","Students")">Smart University</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Navigation","Students")"><i class="fas fa-home"></i> Home<span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Courses","Students")"><i class="fas fa-book"></i><span> Courses</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Absence","Students")"><i class="fas fa-cogs"></i><span> Attandance</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Lectures","Students")"><i class="fas fa-file-pdf"></i><span> Lecture</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="@Url.Action("videos","Students")"><i class="fas fa-video"></i><span> Videos</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="@Url.Action("AvaliableExam","Students")"><i class="fa fa-fw fa-list-alt"></i><span> Exams</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="@Url.Action("ExamResult","Students")"><i class="fa fa-fw fa-list"></i><span> Results</span></a>
          </li>
        </ul>
        <ul class="navbar-nav">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                @Session["StudentName"].ToString().Split(' ')[0] <img class="figure-img img-circle" style="border-radius:50%" width="30" height="30" src="@Url.Action("RenderImage","Students")" />
                    </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" href="@Url.Action("MyProfile","Students")"><i class="fas fa-user mr-1"></i> My Profile</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="@Url.Action("LogOff","Account")"><i class="fas fa-sign-out-alt ml-1"></i> Logout</a>
          </div>
        </li>
      </ul>
       </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
